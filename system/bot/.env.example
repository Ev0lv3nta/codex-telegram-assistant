TG_BOT_TOKEN=

# Optional access control. Comma-separated numeric IDs.
TG_ALLOWED_USER_IDS=
TG_ALLOWED_CHAT_IDS=

# Paths
ASSISTANT_ROOT=/root/personal-assistant
BOT_STATE_DB=/root/personal-assistant/system/tasks/bot_state.db

# Polling
TG_POLL_TIMEOUT_SEC=25
BOT_IDLE_SLEEP_SEC=1.0

# Codex
CODEX_BIN=codex
CODEX_TIMEOUT_SEC=1800
CODEX_MODEL=gpt-5.2-codex
CODEX_EXTRA_ARGS=--sandbox workspace-write -c model_reasoning_effort=\"medium\"

# Git automation
BOT_AUTO_COMMIT=true
BOT_AUTO_PUSH=true
BOT_AUTO_PUSH_HOUR_UTC=3
BOT_GIT_USER_NAME=Assistant Bot
BOT_GIT_USER_EMAIL=assistant-bot@local

# Bot output
BOT_MAX_RESULT_CHARS=3500
BOT_LOG_LEVEL=INFO
